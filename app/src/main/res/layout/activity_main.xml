<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">


    <TextView
        android:id="@+id/name"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="InstaFarm"
        android:textColor="@color/dark"
        android:textSize="30sp"
        android:fontFamily="sans-serif-light"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@id/logo"
        android:gravity="center"
        android:layout_centerHorizontal="true">

    </TextView>
    <ImageView
        android:layout_centerHorizontal="true"
        android:id="@+id/logo"
        android:layout_marginTop="20dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_agronomy">

    </ImageView>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_above="@+id/email"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/dark"
            android:text="Farmers"
            android:textSize="20sp"
            android:fontFamily="sans-serif-light">

        </TextView>

        <View
            android:layout_width="2dp"
            android:layout_height="25dp"
            android:background="@color/dark"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp">

        </View>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/dark"
            android:text="Buyers"
            android:textSize="20sp"
            android:fontFamily="sans-serif-light">

        </TextView>



    </LinearLayout>




    <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:neomorph_view_type="rectangular"
        app:neomorph_shadow_type="outer"
        app:neomorph_elevation="6dp"
        app:neomorph_corner_radius="10dp"
        app:neomorph_background_color="@color/background"
        app:neomorph_shadow_color="@color/shadow_color"
        app:neomorph_highlight_color="@color/highlight"
        android:layout_above="@+id/pass">


        <EditText
            android:id="@+id/email_id"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/rectangle"
            android:paddingStart="10dp"
            android:inputType="textEmailAddress"
            android:paddingEnd="10dp"
            android:hint="EMAIL">

        </EditText>

    </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>
    <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
        android:id="@+id/pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:neomorph_view_type="rectangular"
        app:neomorph_shadow_type="outer"
        app:neomorph_elevation="6dp"
        app:neomorph_corner_radius="10dp"
        app:neomorph_background_color="@color/background"
        app:neomorph_shadow_color="@color/shadow_color"
        app:neomorph_highlight_color="@color/highlight"
        android:layout_centerInParent="true">


        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/rectangle"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:hint="Password"
            android:inputType="textPassword">

        </EditText>

    </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>
    <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:neomorph_view_type="rectangular"
        app:neomorph_shadow_type="outer"
        app:neomorph_elevation="6dp"
        app:neomorph_corner_radius="10dp"
        app:neomorph_background_color="@color/background"
        app:neomorph_shadow_color="@color/shadow_color"
        app:neomorph_highlight_color="@color/highlight"
        android:layout_below="@+id/pass"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true">


        <Button
            android:id="@+id/signin"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:background="@drawable/abc"
            android:text="LOGIN"
            android:textColor="@color/highlight">

        </Button>

    </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login"
        android:gravity="center"
        >

        <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:neomorph_view_type="rectangular"
            app:neomorph_shadow_type="outer"
            app:neomorph_elevation="6dp"
            app:neomorph_corner_radius="10dp"
            app:neomorph_background_color="@color/background"
            app:neomorph_shadow_color="@color/shadow_color"
            app:neomorph_highlight_color="@color/highlight"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/gmail"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="10dp"
                android:src="@drawable/ic_google">

            </ImageView>



        </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>
        <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:neomorph_view_type="rectangular"
            app:neomorph_shadow_type="outer"
            app:neomorph_elevation="6dp"
            app:neomorph_corner_radius="10dp"
            app:neomorph_background_color="@color/background"
            app:neomorph_shadow_color="@color/shadow_color"
            app:neomorph_highlight_color="@color/highlight"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/otp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="10dp"
                android:src="@drawable/ic_phone_call">

            </ImageView>



        </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>



    </LinearLayout>

</RelativeLayout>